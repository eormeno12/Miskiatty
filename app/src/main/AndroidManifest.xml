<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.listen.to.miskiatty">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_app_round"
        android:grantUriPermissions="true"
        android:supportsRtl="true"
        android:theme="@style/Theme.Miskiatty">
        <activity android:name=".view.ui.login.SetPinLoginActivity" />
        <activity android:name=".view.ui.login.PinLoginActivity" />
        <activity android:name=".view.ui.orders.OrderDetailsActivity"/>
        <activity android:name=".view.ui.orders.OrderAddSummaryActivity" />
        <activity android:name=".view.ui.orders.OrderAddActivity" />
        <activity android:name=".view.ui.products.ProductDetailsActivity" />
        <activity android:name=".view.ui.products.ProductAddActivity" />
        <activity android:name=".view.ui.clients.ClientsAddActivity" />
        <activity android:name=".view.ui.clients.ClientDetailsActivity" />
        <activity android:name=".view.ui.clients.ClientEditActivity" />
        <activity android:name=".view.ui.statistics.StatisticDetailsActivity" />
        <activity android:name=".view.ui.login.LoginActivity" />
        <activity
            android:name=".view.ui.activities.SplashScreenActivity"
            android:theme="@style/SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.ui.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>