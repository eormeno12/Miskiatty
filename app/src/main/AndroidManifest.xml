<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.listen.to.miskiatty">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Miskiatty">
        <activity android:name=".view.ui.activities.OrderAddSummaryActivity" />
        <activity android:name=".view.ui.activities.OrderAddActiviy" />
        <activity android:name=".view.ui.activities.ProductDetailsActivity" />
        <activity android:name=".view.ui.activities.ProductAddActivity" />
        <activity android:name=".view.ui.activities.ClientsAddInfoActivity" />
        <activity android:name=".view.ui.activities.ClientsAddActivity" />
        <activity android:name=".view.ui.activities.ClientDetailsActivity" />
        <activity android:name=".view.ui.activities.StatisticDetailsActivity" />
        <activity android:name=".view.ui.activities.LoginActivity" />
        <activity android:name=".view.ui.activities.SplashScreenActivity"
            android:theme="@style/SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.ui.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>